<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ff7eacaa" android:endColor="#ffbad6d2" android:angle="270" />
            <stroke android:width="1dp" android:color="@color/darkgray" />
            <corners android:radius="30dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:endColor="@color/orange" android:startColor="@color/orangered" android:angle="270" />
            <stroke android:width="3dp" android:color="@color/darkgray" />
            <corners android:radius="30dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#ffbad6d2" android:endColor="#ff7eacaa" android:angle="270" />
            <stroke android:width="1dp" android:color="@color/darkgray" />
            <corners android:radius="30dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>