<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffdd4d44" android:endColor="#ffe27770" android:angle="270" />
            <stroke android:width="1dp" android:color="@color/darkgray" />
            <corners android:radius="30dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ff9fc0dd" android:endColor="#ff9da9c6" android:angle="270" />
            <stroke android:width="3dp" android:color="@color/darkgray" />
            <corners android:radius="30dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:endColor="#ffdd4d44" android:startColor="#ffe27770" android:angle="270" />
            <stroke android:width="1dp" android:color="@color/darkgray" />
            <corners android:radius="30dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>